@model projeto_tcm.Models.Item
@{

    ViewBag.Title = "Itens";
}

@Styles.Render("~/Content/css")

@using (Html.BeginForm("CadastrarItem", "Item", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <br />
    <div align="center">
        <p>Adicionar item</p>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-2 custom-info text-center">
                @Html.LabelFor(m => m.NomeItem)
            </div>
            <div class="col-lg-2">
                @Html.EditorFor(m => m.NomeItem)
                @Html.ValidationMessageFor(model => model.NomeItem)
            </div>
            <div class="col-lg-5"></div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-2 custom-info text-center">
                @Html.LabelFor(m => m.PrecoItem)
            </div>
            <div class="col-lg-2">
                @Html.EditorFor(m => m.PrecoItem)
                @Html.ValidationMessageFor(model => model.PrecoItem)
            </div>
            <div class="col-lg-5"></div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-2 custom-info text-center">
                @Html.LabelFor(m => m.DescItem)
            </div>
            <div class="col-lg-2">
                @Html.EditorFor(m => m.DescItem)
                @Html.ValidationMessageFor(model => model.DescItem)
            </div>
            <div class="col-lg-5"></div>
        </div>
        <br/>
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-2 custom-info text-center">
                @Html.LabelFor(m => m.CategoriaItem)
            </div>
            <div class="col-lg-2">
                @Html.EditorFor(m => m.CategoriaItem)
                @Html.ValidationMessageFor(model => model.CategoriaItem)
            </div>
            <div class="col-lg-5"></div>
        </div>
    </div>
    <br />

    <div align="center">
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"> Adicionar</span></button>
    </div>
}
    <hr />

    @using (Html.BeginForm("ConsultarItem", "Item", FormMethod.Get))
    {
        <div align="center">
            <p> Consultar Item</p>
        </div>

        <div align="center">
            <label for="idItem">ID:</label>
            <input id="idItem" type="tel" name="idItem" />
        </div>
        <br />

        <div align="center">
            <button type="submit" class="btn btn-danger" formaction=@Url.Action("DeletarItem") formmethod="post"><span class="glyphicon glyphicon-remove"> Excluir</span></button>
            <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search"> Consultar</span></button>
        </div>

        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <div align="right">
            <a class="btn btn-warning" href="@Url.Action("ListaTodosItens")"><span class="glyphicon glyphicon-th-list"></span>  Visualizar todos</a>
        </div>

    }