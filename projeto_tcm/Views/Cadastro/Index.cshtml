@model projeto_tcm.Models.Cadastro

@{
    /**/

    ViewBag.Title = "Cadastro";
}

@Styles.Render("~/Content/css")

@using (Html.BeginForm("CadastrarFuncionario", "Cadastro", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <br />
    <div align="center">
        <p>Cadastrar funcionário</p>
    </div>
    <div align="left">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.nomeCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.nomeCadastro)
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.telefoneCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.telefoneCadastro)
                </div>
                <div class="col-lg-2"></div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.funcaoCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.funcaoCadastro)
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.enderecoCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.enderecoCadastro)
                </div>
                <div class="col-lg-2"></div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.cpfCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.cpfCadastro)
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.nivelCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.nivelCadastro)
                </div>
                <div class="col-lg-2"></div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.usuarioCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.usuarioCadastro)
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.senhaCadastro)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.senhaCadastro)
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
    </div>
    <br />
    <div align="center">
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-ok"> Adicionar</span></button>
    </div>
}
<hr />

@using (Html.BeginForm("ConsultarCadastro", "Cadastro", FormMethod.Get))
{
    <div align="center">
        <p> Consultar funcionário</p>
    </div>

    <div align="center">
        <label for="idFunc">ID:</label>
        <input id="idFunc" type="tel" name="idFunc"/>
    </div>
    <br />

    <div align="center">
        <button type="submit" class="btn btn-danger" formaction=@Url.Action("DeletarCadastro") formmethod="post"><span class="glyphicon glyphicon-remov">Excluir</span></button>
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-ok">Consultar</span></button>
    </div>
}

