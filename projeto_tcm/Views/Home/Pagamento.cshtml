@model projeto_tcm.Models.Pagamento

@{
    ViewBag.Title = "Pagamento";
}

@Styles.Render("~/Content/css")

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <br/>
    <div align = "center" >
    <p>Adicionar pagamento</p>
    </div>
    <div align="left">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.comandaPagamento)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.comandaPagamento)
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.totalPagamento)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.totalPagamento)
                </div>
                <div class="col-lg-2"></div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.cpfPagamento)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.cpfPagamento)
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.taxaPagamento)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.taxaPagamento)
                </div>
                <div class="col-lg-2"></div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.totalPago)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.totalPago)
                </div>
                <div class="col-lg-4"></div>
                <div class="col-lg-1">
                    @Html.LabelFor(m => m.trocoPagamento)
                </div>
                <div class="col-lg-1">
                    @Html.EditorFor(m => m.trocoPagamento)
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

    </div>

    <hr />

    <div align="center">
        <p> Consultar pagamennto</p>
    </div>

    <div align="center">
        @Html.LabelFor(m => m.idPagamento)

        @Html.EditorFor(m => m.idPagamento)
    </div>

    <br />

    <div align="center">
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"> Excluir</span></button>
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-ok"> Consultar</span></button>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />

    <div align="right">
        <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-th-list"> Visualizar todos</span></button>
    </div>

}