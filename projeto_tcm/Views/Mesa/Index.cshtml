@model projeto_tcm.Models.Mesaa
@{
    /**/

    ViewBag.Title = "Mesas";
}

@Styles.Render("~/Content/css")

@using (Html.BeginForm("CadastrarMesas", "Mesa", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <br />
    <div align="center">
        <p> Cadastrar mesa</p>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-2 custom-info text-center">
                @Html.LabelFor(m => m.mesa)
            </div>
            <div class="col-lg-1">
                @Html.EditorFor(m => m.mesa)

                @Html.ValidationMessageFor(model => model.mesa)

            </div>
            <div class="col-lg-5"></div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-2 custom-info text-center">
                @Html.LabelFor(m => m.assentos)
            </div>
            <div class="col-lg-1">
                @Html.EditorFor(m => m.assentos)
            </div>
            <div class="col-lg-5"></div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-2 custom-info text-center">
                @Html.LabelFor(m => m.statusmesa)
            </div>
            <div class="col-lg-1">
                @Html.EditorFor(m => m.statusmesa)
            </div>
            <div class="col-lg-5"></div>
        </div>
    </div>
    <br />

    <div align="center">
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-ok"> Adicionar</span></button>
    </div>
}
<hr />

@using (Html.BeginForm("ConsultarMesas", "Mesa", FormMethod.Get))
{
    <div align="center">
        <p> Consultar mesas</p>
    </div>

    <div align="center">
        <label for="idMesa">ID:</label>
        <input id="idMesa" type="tel" name="idMesa" />
    </div>

    <br />

    <div align="center">
        <button type="submit" class="btn btn-danger" formaction=@Url.Action("DeletarMesa") formmethod="post"><span class="glyphicon glyphicon-remove"> Excluir</span></button>
        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-search"> Consultar</span></button>
    </div>

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
}

